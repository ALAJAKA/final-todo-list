            })
        });
        // bucket-previous-arrow
        $('#bucket-previous-arrow').click(function () {
            var lastChildPrepend = $(".slide-card2:last-child()");
            $(".slide-card2").animate({ left: cardWidth }, function () {
                $('#bucketfeed').prepend(lastChildPrepend);
                $(".slide-card2").css({
                    left: 0,
                })
            })
        });
    });


