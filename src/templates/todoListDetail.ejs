            <div class="todoInputBox" id="todoInputBox">
                <input class="form-control todoInput" type="text" placeholder="To Do" aria-label="default input example" maxlength="24">
                <button type="button" class="btn btn-outline-success" onclick="todoPlusSave()">저장</button>
                <button type="button" class="btn btn-outline-danger" onclick="todoPlusCancel()">취소</button>
            </div>`

        listBox.insertAdjacentHTML('beforeend', todoInput);
    }
    //투두추가저장
    function todoPlusSave(){
        axios({
            method: 'post',
            url: 'api/to_do',
            data: {},
        })
            .then((response) => {
                const data = response.data;
                alert(data.message);
            })
            .catch((response) => {
                const data = response.response.data;
                console.log(data.errorMessage);
            });
        $('#todoInputBox *').remove();
        const listBox = document.getElementById('listBox');
        let todoPlusBoxInput=`
            <div id="todoPlusBox">
                <button type="button" class="btn todoPlus" id="todoPlusBtn" onclick="todoPlus()">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>`  
        listBox.insertAdjacentHTML('beforeend', todoPlusBoxInput);
    }
    //투두추가취소
    function todoPlusCancel(){
        $('#todoInputBox *').remove();
        const listBox = document.getElementById('listBox');
        let todoPlusBoxInput=`
            <div id="todoPlusBox">
                <button type="button" class="btn todoPlus" id="todoPlusBtn" onclick="todoPlus()">
