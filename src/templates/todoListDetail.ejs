<script>
    // 달력 기능
        //현재 날짜
        var year = new Date().getFullYear();// 현재 날짜의 년
        var month =new Date().getMonth()+1;// 현재 날짜의 월
        var day =new Date().getDate();// 현재 날짜
        $(document).ready(function() {
            calender();
